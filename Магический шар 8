from random import *
answers = ["Бесспорно", 'Предрешено', "Никаких сомнений", 'Определённо да', 'Можешь быть уверен в этом', 'Мне кажется - да', 'Вероятнее всего', 'Хорошие перспективы', "Знаки говорят - да", 'Да', 'Пока неясно, попробуй снова', 'Спроси позже', 'Лучше не рассказывать', 'Сейчас нельзя предсказать', 'Сконцентрируйся и спроси опять', 'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет', "Перспективы не очень хорошие", "Весьма сомнительно"]
flag = False
print("Йоу, я магический шар, и я знаю ответ на любой твой вопрос.\nКак зовут тебя?")
name = input()
while flag == False:
    print("Хай,", name)
    n = input("Какой вы хотите задать вопрос?\n")
    print(choice(answers))
    print("Хочешь ли ты задать мне еще вопросы?\nОтветьте, пожалуйста вариантами ответов: Да(Д) или Yes(Y) в случае положительно принятого вами решения")
    a = input()
    if a in ("Да", "Д", "Yes", "Y"):
        continue
    else:
        print("Возвращайся в любое время ^^")
        flag = True
